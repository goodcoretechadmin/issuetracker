<h1>Listing doctors</h1>

<table>
  <tr>
    <th width="100px">First name</th>
    <th width="100px">Last name</th>
    <th width="300px">Address</th>
    <th width="100px"># of issues received</th>
  </tr>

<% @doctors.each do |doctor| %>
  <tr>
    <td><%=h doctor.first_name %></td>
    <td><%=h doctor.last_name %></td>
    <td><%=h doctor.address %></td>
    <td><%=h doctor.issues.size %></td>
    <td><%= link_to 'Show', doctor %></td>
    <td><%= link_to 'View Notes', polymorphic_url([doctor, Note.new]) %></td>
    <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
    <td><%= link_to 'Destroy', doctor, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

