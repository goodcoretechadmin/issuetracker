<h1>New issue</h1>

<% form_for(@issue) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :client %><br/>
      <%= f.collection_select :client_id, Client.all, :id, :name, :prompt => true %>
    </p>
    <p>
      <%= f.label :issue_type %><br/>
      <%= f.select :issue_type, %w[Doctor Prep QA], {:prompt => true}, {} %>
    </p>
    <p>
      <%= f.label :doctor %><br/>
      <%= f.collection_select :doctor_id, Doctor.all, :id, :name, :prompt => true %>
    </p>
    <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description, {:rows => 5} %>
    </p>
    <p>
      <%= f.hidden_field :status, {:value => 'new'} %>
      <%= f.hidden_field :substantiated, {:value => 'false'} %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
<% end %>

<%= link_to 'Back', issues_path %>